{% extends 'base.html.twig' %}

{% block title %}My Favorite Cities{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h2 class="mb-0">My Favorite Cities</h2>
                </div>
                <div class="card-body">
                    {% if favorites is empty %}
                        <p class="text-center">You haven't added any cities to your favorites yet.</p>
                    {% else %}
                        <div class="row">
                            {% for favorite in favorites %}
                                <div class="col-md-6 mb-4">
                                    <div class="card h-100">
                                        <div class="card-body">
                                            <div class="d-flex justify-content-between align-items-center">
                                                <h3 class="card-title">{{ favorite.city }}, {{ favorite.country }}</h3>
                                                <form method="post" action="{{ path('app_remove_favorite') }}" class="d-inline">
                                                    <input type="hidden" name="city" value="{{ favorite.city }}">
                                                    <button type="submit" class="btn btn-outline-danger btn-sm">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </form>
                                            </div>
                                            <div class="current-weather">
                                                <h4 class="display-5">{{ favorite.temperature }}°C</h4>
                                                <p class="lead">{{ favorite.description }}</p>
                                                <div class="weather-details">
                                                    <p><i class="fas fa-wind"></i> Wind: {{ favorite.windSpeed }} m/s</p>
                                                    <p><i class="fas fa-tint"></i> Humidity: {{ favorite.humidity }}%</p>
                                                    <p><i class="fas fa-compress-arrows-alt"></i> Pressure: {{ favorite.pressure }} hPa</p>
                                                </div>
                                            </div>
                                            <div class="mt-3">
                                                <canvas id="forecastChart{{ loop.index }}"></canvas>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {% if favorites is not empty %}
        <script>
            document.addEventListener('DOMContentLoaded', function() {
                {% for favorite in favorites %}
                    const ctx{{ loop.index }} = document.getElementById('forecastChart{{ loop.index }}').getContext('2d');
                    new Chart(ctx{{ loop.index }}, {
                        type: 'line',
                        data: {
                            labels: {{ favorite.forecast|map(f => f.date)|json_encode|raw }},
                            datasets: [{
                                label: 'Temperature (°C)',
                                data: {{ favorite.forecast|map(f => f.temperature)|json_encode|raw }},
                                borderColor: 'rgb(75, 192, 192)',
                                tension: 0.1
                            }]
                        },
                        options: {
                            responsive: true,
                            scales: {
                                y: {
                                    beginAtZero: false
                                }
                            }
                        }
                    });
                {% endfor %}
            });
        </script>
    {% endif %}
{% endblock %} 